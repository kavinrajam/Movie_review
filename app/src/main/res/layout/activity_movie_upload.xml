<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/mv"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".Admin">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Movies"
        android:textAlignment="center"
        android:textColor="#D81414"
        android:textSize="36sp"
        android:textStyle="bold" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/dirname"
                android:layout_width="180dp"
                android:layout_height="51dp"
                android:gravity="start"
                android:text="Name :"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/namem"
                android:layout_width="235dp"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/actors"
                android:layout_width="176dp"
                android:layout_height="46dp"
                android:gravity="start"
                android:text="Director Name :"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/dire"
                android:layout_width="234dp"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="Director Name"
                android:inputType="textPersonName" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/q3"
                android:layout_width="176dp"
                android:layout_height="62dp"
                android:gravity="start"
                android:text="Actors/Actresses :"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/actor"
                android:layout_width="234dp"
                android:layout_height="76dp"
                android:ems="10"
                android:hint="Name of actor"
                android:inputType="textPersonName" />

        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating :"
        android:textColor="#090909"
        android:textSize="24sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:numStars="5"
        android:paddingLeft="75dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/BSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:text="Upload poster" />


            <ImageView
                android:id="@+id/IVPreviewImage"
                android:layout_width="254dp"
                android:layout_height="111dp"
                android:layout_below="@id/BSelectImage"
                android:layout_marginEnd="16dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    <TextView
        android:id="@+id/des"
        android:layout_width="176dp"
        android:layout_height="76dp"
        android:gravity="start"
        android:text="Description :"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/fed"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />
    </TableRow></TableLayout>

    <Button
        android:id="@+id/but1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Submit" />

</LinearLayout>